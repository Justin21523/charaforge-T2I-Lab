AI_CACHE_ROOT=/mnt/ai_warehouse/cache
CUDA_VISIBLE_DEVICES=0

# API configuration
API_PREFIX=/api/v1
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:7860
CORS_ALLOW_CREDENTIALS=true

# Model Configuration
DEVICE=auto
VQA_MODEL=llava-hf/llava-1.5-7b-hf
CAPTION_MODEL=Salesforce/blip2-opt-2.7b

# Performance Settings
MAX_WORKERS=2
MAX_BATCH_SIZE=4
ENABLE_4BIT_QUANTIZATION=true
ENABLE_CPU_OFFLOAD=true

# Security
MAX_IMAGE_SIZE_MB=10
ALLOWED_IMAGE_TYPES=jpg,jpeg,png,webp

# Logging
LOG_LEVEL=INFO
LOG_FILE=/tmp/multimodal-lab.log

# API Base URL for frontend
API_BASE_URL=http://localhost:8000
VITE_API_BASE_URL=http://localhost:8000

# Optional: HuggingFace token for private models
# HF_TOKEN=your_token_here

# Optional: CUDA device selection
# CUDA_VISIBLE_DEVICES=0