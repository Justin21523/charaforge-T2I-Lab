
# .env.example - Environment variables template
# CharaForge T2I Lab - Environment Configuration

# === Core Settings ===
AI_CACHE_ROOT=../ai_warehouse/cache
CUDA_VISIBLE_DEVICES=0

# === API Settings ===
API_HOST=0.0.0.0
API_PORT=8000
API_CORS_ORIGINS=http://localhost:3000,http://localhost:8080

# === Redis/Celery ===
REDIS_URL=redis://localhost:6379/0
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# === HuggingFace (Optional) ===
# HF_TOKEN=your_huggingface_token_here
# HF_HOME will be set automatically to AI_CACHE_ROOT/hf

# === Logging ===
LOG_LEVEL=INFO
LOG_FILE=logs/charaforge.log

# === Features ===
ENABLE_SAFETY_CHECKS=true
ENABLE_WATERMARKS=true
ENABLE_CONTROLNET=true

# === Development ===
DEBUG=false
RELOAD=false

# === Optional: Database ===
# DATABASE_URL=postgresql://user:pass@localhost:5432/charaforge

# === Optional: Authentication ===
# JWT_SECRET=your-secret-key-here
# API_KEY_HEADER=X-API-Key

# === Optional: Monitoring ===
# SENTRY_DSN=your-sentry-dsn
# PROMETHEUS_ENABLED=false