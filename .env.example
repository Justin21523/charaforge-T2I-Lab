# Core Configuration
AI_CACHE_ROOT=../ai_warehouse/cache
API_PREFIX=/api/v1
CUDA_VISIBLE_DEVICES=0

# API configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:7860
CORS_ALLOW_CREDENTIALS=true
API_TIMEOUT_SECONDS=300

# Model Configuration
DEVICE=auto
VQA_MODEL=llava-hf/llava-1.5-7b-hf
CAPTION_MODEL=Salesforce/blip2-opt-2.7b
MAX_IMAGE_SIZE_MB=10
ALLOWED_IMAGE_TYPES=jpg,jpeg,png,webp

# Performance Settings
MAX_WORKERS=2
MAX_BATCH_SIZE=100
ENABLE_4BIT_QUANTIZATION=true
ENABLE_CPU_OFFLOAD=true
# Celery Configuration
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0
CELERY_TASK_SOFT_TIME_LIMIT=300
CELERY_TASK_TIME_LIMIT=600

# Model Configuration
DEFAULT_MODEL_CAPTION=Salesforce/blip2-opt-2.7b
DEFAULT_MODEL_VQA=llava-hf/llava-1.5-7b-hf
DEFAULT_MODEL_CHAT=Qwen/Qwen-7B-Chat
DEFAULT_MODEL_EMBEDDINGS=BAAI/bge-base-en-v1.5

# Security (Optional)
SECRET_KEY=your-secret-key-here
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=1440

# Database (Optional)
DATABASE_URL=sqlite:///./multi_modal_lab.db
#=DATABASE_URL=postgresql://user:password@localhost/multi_modal_lab

# Monitoring
ENABLE_METRICS=true
METRICS_EXPORT_INTERVAL=60
ALERT_COOLDOWN_MINUTES=5

# Resource Limits
MAX_GPU_MEMORY_GB=10
MAX_CPU_PERCENT=90
MAX_MEMORY_PERCENT=90

# Frontend URLs
REACT_APP_API_BASE=http://localhost:8000
REACT_APP_API_PREFIX=/api/v1
GRADIO_SERVER_NAME=0.0.0.0
GRADIO_SERVER_PORT=7860

# Logging
LOG_LEVEL=INFO
LOG_FILE=/tmp/multimodal-lab.log

# API Base URL for frontend
API_BASE_URL=http://localhost:8000
VITE_API_BASE_URL=http://localhost:8000

# Optional: HuggingFace token for private models
# HF_TOKEN=your_token_here

# Optional: CUDA device selection
# CUDA_VISIBLE_DEVICES=0